<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:fillViewport="true"
    android:paddingBottom="20dp"
    tools:context=".targetActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="16dp"
            android:background="@color/student_login"
            app:layout_constraintTop_toBottomOf="@+id/click_desc"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/click_title"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@drawable/bg_list"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Hackathon"
            android:textColor="@color/student_login"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/click_org"
            android:layout_width="354dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Codelabs"
            android:textColor="#F6F6F6"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/click_title" />

        <TextView
            android:id="@+id/click_date"
            android:layout_width="212dp"
            android:layout_height="57dp"
            android:layout_marginTop="32dp"
            android:fontFamily="serif"
            android:text="11/12/2020"
            android:textColor="@color/student_login"
            android:textSize="27sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/click_org" />

        <Button
            android:id="@+id/event_reg_btn"
            android:layout_width="282dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/roundborder_white"
            android:enabled="false"
            android:textColor="@color/student_login"
            android:text="Register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="191dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="Date of Event: "
            android:textColor="@color/student_login"
            android:textSize="27sp"
            app:layout_constraintEnd_toStartOf="@+id/click_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/click_org" />

        <TextView
            android:id="@+id/click_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:text="Codelabs is organizing the event perfectly under superivision of crce"
            android:textColor="@color/student_login"
            android:textSize="27sp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:layout_editor_absoluteX="21dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Deadline for Registering"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/student_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <TextView
            android:id="@+id/click_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="8/11/20"
            android:textSize="36sp"
            android:textColor="@color/student_login"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="179dp"
            android:layout_height="42dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:text="Contact No:"
            android:textColor="@color/student_login"
            android:textSize="27sp"
            app:layout_constraintEnd_toStartOf="@+id/click_phone"
            app:layout_constraintHorizontal_bias="0.472"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/click_del" />

        <TextView
            android:id="@+id/click_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="68dp"
            android:textColor="@color/student_login"
            android:text="9873128312"
            android:textSize="27sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/click_del" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:text="BY:"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/click_org"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/click_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>